<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp">

    <!-- profile -->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/profile"
        app:civ_shadow="false"
        android:id="@+id/adapter_recyclerview_profile_picture_oval"
        android:layout_alignParentLeft="true"
        app:civ_shadow_gravity="center"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        app:civ_border_color="@color/newThemColor"
        android:layout_centerVertical="true"
        app:civ_border_width="0dp"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/adapter_recyclerview_profile_picture_rect"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/profile"
        android:elevation="5dp"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adapter_chat_box_username"
                android:fontFamily="@font/bold"
                android:textColor="@color/themeColor"
                android:textSize="18dp"
                android:text="Milan Shrestha" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adapter_chat_box_time"
                android:fontFamily="@font/regular"
                android:textColor="@color/backgroundDeepGrayColor"
                android:textSize="12dp"
                android:text="12:34 PM" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/adapter_recyclerview_profile_picture_upload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blank_image_drawable"
                android:elevation="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_chat_box_msg"
            android:fontFamily="@font/regular"
            android:textColor="@color/themeColor"
            android:textSize="15dp"
            android:text="K xa khaber asd asdj asd
asdkjasd kasd  jik llo sj
 kasi das"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>