<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="right">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/adapter_private_msg_background">

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_recyclerview_chat_box_private_text"
            android:fontFamily="@font/semibold"
            android:textColor="#FFF"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:text="anil shrestha hello kumari " />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_recyclerview_chat_box_private_time"
        android:fontFamily="@font/semibold"
        android:textColor="@color/themeColor"
        android:textSize="14dp"
        android:layout_marginRight="10dp"
        android:text="23 min ago" />

</LinearLayout>