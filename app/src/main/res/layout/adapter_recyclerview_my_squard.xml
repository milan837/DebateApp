<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- text layout-->
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/brickColor"
                    android:text="My Squard Name"
                    android:id="@+id/adapterrecyclerview_my_squard"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/themeColor"
                    android:text="Total Members"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"/>

            </LinearLayout>


            <!-- total no of users -->
            <RelativeLayout
                android:layout_weight="1"
                android:elevation="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/opp_team_circle_layout"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/bold"
                    android:textColor="#FFF"
                    android:id="@+id/adapter_recyclerview_my_squard_total_members"
                    android:text="544"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>

        <!-- members images -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:textColor="@color/themeColor"
            android:layout_marginTop="30dp"
            android:text="Members"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <!-- profile -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_shadow="true"
                android:layout_marginRight="2dp"
                android:id="@+id/adapter_recyclerview_profile_picture1"
                android:layout_alignParentLeft="true"
                app:civ_shadow_gravity="center"
                app:civ_shadow_radius="3"
                app:civ_border_color="@color/brickColor"
                android:layout_centerVertical="true"
                app:civ_border_width="3dp"/>

            <!-- profile -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/profile"
                app:civ_shadow="true"
                android:id="@+id/adapter_recyclerview_profile_picture2"
                android:layout_alignParentLeft="true"
                app:civ_shadow_gravity="center"
                app:civ_shadow_radius="3"
                app:civ_border_color="@color/brickColor"
                android:layout_centerVertical="true"
                app:civ_border_width="3dp"/>

            <!-- profile -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_shadow="true"
                android:layout_marginRight="2dp"
                android:id="@+id/adapter_recyclerview_profile_picture3"
                android:layout_alignParentLeft="true"
                app:civ_shadow_gravity="center"
                app:civ_shadow_radius="3"
                app:civ_border_color="@color/brickColor"
                android:layout_centerVertical="true"
                app:civ_border_width="3dp"/>

            <!-- profile -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_shadow="true"
                android:id="@+id/adapter_recyclerview_profile_picture4"
                android:layout_alignParentLeft="true"
                app:civ_shadow_gravity="center"
                android:layout_marginRight="2dp"
                app:civ_shadow_radius="3"
                app:civ_border_color="@color/brickColor"
                android:layout_centerVertical="true"
                app:civ_border_width="3dp"/>

            <!-- profile -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_shadow="true"
                android:id="@+id/adapter_recyclerview_profile_picture5"
                android:layout_alignParentLeft="true"
                app:civ_shadow_gravity="center"
                app:civ_shadow_radius="3"
                app:civ_border_color="@color/brickColor"
                android:layout_centerVertical="true"
                app:civ_border_width="3dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>