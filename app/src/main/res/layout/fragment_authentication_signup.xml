<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor">


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/activity_margin_left_right"
        android:layout_marginLeft="@dimen/activity_margin_left_right">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:textColor="#FFF"
            android:text="Debate"
            android:fontFamily="@font/bold"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:textSize="16dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFF"
            android:background="@drawable/auth_text_box"
            android:id="@+id/authentication_signup_edittext_email"
            android:hint="E-mail"
            android:fontFamily="@font/regular"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:padding="8dp"
            android:background="@drawable/auth_text_box"
            android:id="@+id/authentication_signup_edittext_password"
            android:hint="Password"
            android:singleLine="true"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:fontFamily="@font/regular"
            android:paddingLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:padding="8dp"
            android:singleLine="true"
            android:background="@drawable/auth_text_box"
            android:id="@+id/authentication_signup_edittext_re_type_password"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:fontFamily="@font/regular"
            android:paddingLeft="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:id="@+id/authentication_signup_button_signup"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:background="@drawable/login_button"
            android:fontFamily="@font/semibold"
            android:textColor="#FFF"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="Already have an account"
            android:id="@+id/authentication_signup_button_already_have_acc"
            android:background="@drawable/login_with_facebook_button"
            android:fontFamily="@font/semibold"
            android:textAllCaps="false"
            android:textColor="#FFF"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:id="@+id/authentication_signup_textview_signup"
            android:text="Agree terms and condition"
            android:fontFamily="@font/regular" />

    </LinearLayout>

</RelativeLayout>