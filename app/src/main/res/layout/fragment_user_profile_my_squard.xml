    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_user_profile_my_squard_recyclerview">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/fragment_user_profile_squard_search_progressbar"
