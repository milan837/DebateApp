<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_update_back_button"
        android:src="@drawable/ic_arrow_back_white_50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_update_back_button"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your new Username"
            android:fontFamily="@font/semibold"
            android:textColor="#FFF"
            android:textSize="30dp"/>

        <EditText
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:singleLine="true"
            android:textColorHint="#FFF"
            android:background="@drawable/auth_text_box"
            android:id="@+id/fragment_update_username_text_box"
            android:hint="Username"
            android:fontFamily="@font/regular"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/fragment_update_username_button"
        android:background="@color/brickColor"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:text="Change"
        android:textSize="16dp"
        android:elevation="50dp"
        android:fontFamily="@font/semibold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>